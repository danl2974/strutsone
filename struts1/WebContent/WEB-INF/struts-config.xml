<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC 
"-//Apache Software Foundation//DTD Struts Configuration 1.3//EN" 
"http://jakarta.apache.org/struts/dtds/struts-config_1_3.dtd">
 
<struts-config>
 
	<form-beans>
	   <form-bean name="mainForm" 
		type="com.dl2974.struts.MainForm"/>
	</form-beans>
 
	<action-mappings>
	   <action path="/struts"
		type="com.dl2974.struts.MainAction"
		name="mainForm">
		<forward name="success" path="/views/main.jsp"/>
 
	   </action>
	</action-mappings>
 
</struts-config>